    "version": "0.2.0",
        
    "configurations": [
       
        {
            "cwd": "${workspaceRoot}",
            "executable": "./build/barebone",
            "name": "Debug Microcontroller BMP",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "bmp" ,
            "BMPGDBSerialPort": "/dev/ttyACM0",
            "svdFile" : "${workspaceRoot}/svd/STM32F103xx.svd",
            "preLaunchTask": "cmake build"

        },
        {
            "cwd": "${workspaceRoot}",
            "executable": "./build/barebone",
            "name": "Debug Microcontroller",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "stutil",
            "svdFile" : "${workspaceRoot}/svd/STM32F103xx.svd",
            "preLaunchTask": "cmake build"
        }
        
        
    ]

}