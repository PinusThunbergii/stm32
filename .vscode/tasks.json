{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake build",
            "type": "shell",
            "command": "clear; cmake --build build/",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cmake rebuild",
            "type": "shell",
            "command": "cd build/; trash * ; cmake ../; cmake --build ./",
            "group": {
                "isDefault": true,
                "kind": "build"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}